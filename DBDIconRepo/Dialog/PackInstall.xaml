                    <ui:FlyoutService.Flyout>
                        <ui:Flyout Placement="BottomEdgeAlignedRight">
                            <Image Width="128" Height="128"/>
                        </ui:Flyout>
                    </ui:FlyoutService.Flyout>
                    <ui:FontIcon Glyph=""/>
