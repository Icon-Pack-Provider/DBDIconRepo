                        <TextBlock FontSize="10" Margin="0,-6,0,0">
                            <Run Text="{Binding Name}" FontSize="14"/>
                            <LineBreak/>[<Run Text="Survivor Item" FontWeight="Black"/>] <Run Text="{Binding Info.For}"/>
                        </TextBlock>
                    </CheckBox.Content>
                </CheckBox>
                <TextBlock Margin="5,0" Grid.Column="1" FontSize="12"
