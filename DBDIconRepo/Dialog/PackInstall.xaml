        ui:WindowHelper.UseModernWindowStyle="True"
        xmlns:local="clr-namespace:DBDIconRepo.Dialog"
        mc:Ignorable="d" Height="480" Width="600">
    <Window.Resources>
        <convert:ShowSpecificTextIfNullConverter x:Key="nullToText"/>

        <DataTemplate DataType="{x:Type m:PackSelectionItem}"
                      x:Key="genericNoInfoItem">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}"
                          Content="{Binding FileName}" VerticalAlignment="Center"/>
                <Button Grid.Column="1" HorizontalAlignment="Right" Margin="5,0">
                    <ui:FlyoutService.Flyout>
                        <ui:Flyout Placement="BottomEdgeAlignedRight">
                            <Image Width="128" Height="128"/>
                        </ui:Flyout>
                    </ui:FlyoutService.Flyout>
                    <ui:FontIcon Glyph=""/>
                </Button>
            </Grid>
        </DataTemplate>
        <DataTemplate DataType="{x:Type m:PackSelectionItem}"
                      x:Key="genericItemInfo">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Rectangle Grid.ColumnSpan="3" Fill="Transparent"
                           VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
                <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}"
                          Content="{Binding Name}" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding FileName}" Margin="5,0" Grid.Column="1" VerticalAlignment="Center" FontSize="12"/>
                <Button Grid.Column="2" HorizontalAlignment="Right" Margin="5,0">
                    <ui:FlyoutService.Flyout>
                        <ui:Flyout Placement="BottomEdgeAlignedRight">
                            <Image Width="128" Height="128"/>
                        </ui:Flyout>
                    </ui:FlyoutService.Flyout>
                    <ui:FontIcon Glyph=""/>
                </Button>
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="perkItemInfo" DataType="{x:Type m:PackSelectionItem}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <CheckBox Margin="0,4,0,0"
                          VerticalAlignment="Center"
                          IsChecked="{Binding IsSelected, Mode=TwoWay}">
                    <CheckBox.Content>
                        <TextBlock FontSize="10" Margin="0,-6,0,0">
                            <Run Text="{Binding Name}" FontSize="14"/>
                            <LineBreak/><Run Text="{Binding Info.PerkOwner, Converter={StaticResource nullToText}, ConverterParameter='General perks'}"/>
                        </TextBlock>
                    </CheckBox.Content>
                </CheckBox>
                <TextBlock Margin="5,0" Grid.Column="1" FontSize="12"
                           VerticalAlignment="Center"
                           Text="{Binding FileName}"/>
                <Button Grid.Column="2" HorizontalAlignment="Right" Margin="5,0">
                    <ui:FlyoutService.Flyout>
                        <ui:Flyout Placement="BottomEdgeAlignedRight">
                            <Image Width="128" Height="128"/>
                        </ui:Flyout>
                    </ui:FlyoutService.Flyout>
                    <ui:FontIcon Glyph=""/>
                </Button>
            </Grid>
        </DataTemplate>
        <DataTemplate DataType="{x:Type m:PackSelectionItem}"
                      x:Key="killerPowerInfo">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
